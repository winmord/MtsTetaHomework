<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/movie_card_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/movieCoverImageView"
        style="@style/BaseRoundedImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/movie_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_movie_cover" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/homeButtonImageView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/movieInfoCard"
            style="@style/MovieInfoCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/movie_info_card_top_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/movieCategoryTextView"
                style="@style/BaseText.MovieCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_category_start_margin"
                android:layout_marginTop="@dimen/movie_category_top_margin"
                android:text="@string/movie_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movieDateTextView"
                style="@style/BaseText.MovieDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_date_start_margin"
                android:layout_marginTop="@dimen/movie_date_top_margin"
                android:text="@string/movie_date"
                app:layout_constraintLeft_toRightOf="@id/movieCategoryTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/movieTitleTextView"
                style="@style/BaseText.MovieTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_title_start_margin"
                android:layout_marginTop="@dimen/movie_title_top_margin"
                android:text="@string/movie_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieCategoryTextView" />

            <TextView
                android:id="@+id/movieAgeRestrictionTextView"
                style="@style/BaseText.MovieAgeRestriction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/age_rating_top_margin"
                android:layout_marginEnd="@dimen/age_rating_end_margin"
                android:text="@string/age_rating"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/movieStar1ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/first_rating_star_start_margin"
                android:layout_marginTop="@dimen/rating_star_top_margin"
                android:contentDescription="@string/star"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                app:srcCompat="@drawable/ic_star_black" />

            <ImageView
                android:id="@+id/movieStar2ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rating_star_start_margin"
                android:layout_marginTop="@dimen/rating_star_top_margin"
                android:contentDescription="@string/star"
                app:layout_constraintLeft_toRightOf="@id/movieStar1ImageView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                app:srcCompat="@drawable/ic_star_black" />

            <ImageView
                android:id="@+id/movieStar3ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rating_star_start_margin"
                android:layout_marginTop="@dimen/rating_star_top_margin"
                android:contentDescription="@string/star"
                app:layout_constraintLeft_toRightOf="@id/movieStar2ImageView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                app:srcCompat="@drawable/ic_star_black" />

            <ImageView
                android:id="@+id/movieStar4ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rating_star_start_margin"
                android:layout_marginTop="@dimen/rating_star_top_margin"
                android:contentDescription="@string/star"
                app:layout_constraintLeft_toRightOf="@id/movieStar3ImageView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                app:srcCompat="@drawable/ic_star_black" />

            <ImageView
                android:id="@+id/movieStar5ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rating_star_start_margin"
                android:layout_marginTop="@dimen/rating_star_top_margin"
                android:contentDescription="@string/star"
                app:layout_constraintLeft_toRightOf="@id/movieStar4ImageView"
                app:layout_constraintTop_toBottomOf="@id/movieTitleTextView"
                app:srcCompat="@drawable/ic_star_transparent" />

            <TextView
                android:id="@+id/movieDescriptionTextView"
                style="@style/BaseText.MovieDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/movie_description_start_margin"
                android:layout_marginTop="@dimen/movie_description_top_margin"
                android:layout_marginEnd="@dimen/movie_description_end_margin"
                android:text="@string/movie_description"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieStar1ImageView" />

            <TextView
                android:id="@+id/artistsTitleTextView"
                style="@style/BaseText.ArtistsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/artist_title_start_margin"
                android:layout_marginTop="@dimen/artist_title_top_margin"
                android:text="@string/artists_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movieDescriptionTextView" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/artists_scroll_end_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/artistsTitleTextView">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/firstArtistImageView"
                        style="@style/BaseRoundedImage"
                        android:layout_width="@dimen/artist_image_width"
                        android:layout_height="@dimen/artist_image_height"
                        android:layout_marginStart="@dimen/first_artist_image_start_margin"
                        android:layout_marginTop="@dimen/artist_image_top_margin"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image_artist_1" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/secondArtistImageView"
                        style="@style/BaseRoundedImage"
                        android:layout_width="@dimen/artist_image_width"
                        android:layout_height="@dimen/artist_image_height"
                        android:layout_marginStart="@dimen/artist_image_start_margin"
                        android:layout_marginTop="@dimen/artist_image_top_margin"
                        app:layout_constraintLeft_toRightOf="@id/firstArtistImageView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image_artist_2" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/thirdArtistImageView"
                        style="@style/BaseRoundedImage"
                        android:layout_width="@dimen/artist_image_width"
                        android:layout_height="@dimen/artist_image_height"
                        android:layout_marginStart="@dimen/artist_image_start_margin"
                        android:layout_marginTop="@dimen/artist_image_top_margin"
                        app:layout_constraintLeft_toRightOf="@id/secondArtistImageView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/image_artist_3" />

                    <TextView
                        android:id="@+id/firstArtistNameTextView"
                        style="@style/BaseText.ArtistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/artist_name_start_margin"
                        android:layout_marginTop="@dimen/artist_name_top_margin"
                        android:text="@string/artist_1_name"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/firstArtistImageView" />

                    <TextView
                        android:id="@+id/secondArtistNameTextView"
                        style="@style/BaseText.ArtistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/artist_name_start_margin"
                        android:layout_marginTop="@dimen/artist_name_top_margin"
                        android:text="@string/artist_2_name"
                        app:layout_constraintLeft_toRightOf="@id/firstArtistImageView"
                        app:layout_constraintTop_toBottomOf="@id/secondArtistImageView" />

                    <TextView
                        android:id="@+id/thirdArtistNameTextView"
                        style="@style/BaseText.ArtistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/artist_name_start_margin"
                        android:layout_marginTop="@dimen/artist_name_top_margin"
                        android:text="@string/artist_3_name"
                        app:layout_constraintLeft_toRightOf="@id/secondArtistImageView"
                        app:layout_constraintTop_toBottomOf="@id/thirdArtistImageView" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/homeButtonImageView"
        style="@style/BottomNavigationButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_view_height"
        android:contentDescription="@string/home_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"
        app:srcCompat="@drawable/ic_home" />

    <ImageView
        android:id="@+id/profileButtonImageView"
        style="@style/BottomNavigationButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/bottom_navigation_view_height"
        android:contentDescription="@string/profile_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"
        app:srcCompat="@drawable/ic_profile" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/active_indicator"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".5"
        app:srcCompat="@drawable/ic_active_indicator" />
</androidx.constraintlayout.widget.ConstraintLayout>