<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="RoundedImageView.Artist">
        <item name="cornerSize">@dimen/artist_image_corner_radius</item>
    </style>

    <style name="RoundedImageView.Cover">
        <item name="cornerSize">@dimen/cover_corner_radius</item>
    </style>

    <style name="BaseText">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BaseText.MovieCategory">
        <item name="android:textSize">@dimen/movie_category_text_size</item>
        <item name="android:background">@drawable/ic_movie_category_frame</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BaseText.MovieDate">
        <item name="android:textSize">@dimen/movie_date_text_size</item>
    </style>

    <style name="BaseText.MovieTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/movie_title_text_size</item>
    </style>

    <style name="BaseText.MovieAgeRestriction">
        <item name="android:textSize">@dimen/age_rating_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ic_rating_frame</item>
    </style>

    <style name="BaseText.MovieDescription">
        <item name="android:textSize">@dimen/movie_description_text_size</item>
    </style>

    <style name="BaseText.ArtistsTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/artist_title_text_size</item>
    </style>

    <style name="BaseText.ArtistName">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/artist_name_text_size</item>
    </style>

    <style name="BaseRoundedImage">
        <item name="shapeAppearanceOverlay">@style/RoundedImageView.Cover</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="MovieInfoCard">
        <item name="android:background">@drawable/shape_movie_info_card_background</item>
        <item name="android:paddingBottom">@dimen/movie_info_card_bottom_padding</item>
    </style>

    <style name="BottomNavigationButton">
        <item name="android:background">@color/bottom_navigation_view</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>