<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="artistRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/artist_image_corner</item>
    </style>

    <style name="coverRoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cover_corner</item>
    </style>

    <style name="movieCover">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="shapeAppearanceOverlay">@style/coverRoundedImageView</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/movie_info_card_background</item>
    </style>

    <style name="horizontalMovieCover">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="shapeAppearanceOverlay">@style/coverRoundedImageView</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/movie_info_card_background</item>
    </style>

    <style name="movieInfoCardScroll">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="horizontalMovieInfoCardScroll">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">.6</item>
    </style>

    <style name="movieInfoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_info_card_margin_top</item>
        <item name="android:background">@drawable/movie_info_card_background</item>
        <item name="android:paddingBottom">@dimen/movie_info_card_padding_bottom</item>
    </style>

    <style name="horizontalMovieInfoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/movie_info_card_background</item>
        <item name="android:paddingBottom">@dimen/movie_info_card_padding_bottom</item>
    </style>

    <style name="artistsScroll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/artists_scroll_margin_end</item>
    </style>

    <style name="movieCategory">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/movie_category_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_movie_category_frame</item>
        <item name="android:layout_marginTop">@dimen/movie_category_margin_top</item>
        <item name="android:layout_marginStart">@dimen/activity_movie_details_margin_start</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="movieDate">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/movie_date_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_date_margin_top</item>
        <item name="android:layout_marginStart">@dimen/movie_date_margin_start</item>
    </style>

    <style name="ratingStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/rating_star_margin_top</item>
        <item name="android:layout_marginStart">@dimen/rating_star_margin_start</item>
    </style>

    <style name="firstRatingStar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/rating_star_margin_top</item>
        <item name="android:layout_marginStart">@dimen/first_rating_star_margin_start</item>
    </style>

    <style name="movieTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/movie_title_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_title_margin_top</item>
        <item name="android:layout_marginStart">@dimen/movie_date_margin_start</item>
    </style>

    <style name="movieAgeRating">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/age_rating_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/age_rating_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/age_rating_margin_start</item>
        <item name="android:background">@drawable/ic_rating_frame</item>
    </style>

    <style name="movieDescription">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/movie_description_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/movie_description_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_description_margin_end</item>
    </style>

    <style name="horizontalMovieDescription">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/movie_description_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/movie_description_margin_top</item>
        <item name="android:layout_marginStart">@dimen/movie_description_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/movie_description_margin_end</item>
    </style>

    <style name="artistTitle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/artist_title_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/artist_title_margin_top</item>
        <item name="android:layout_marginStart">@dimen/artist_title_margin_start</item>
    </style>

    <style name="artistImage">
        <item name="android:layout_width">@dimen/artist_image_width</item>
        <item name="android:layout_height">@dimen/artist_image_height</item>
        <item name="android:layout_marginTop">@dimen/artist_image_margin_top</item>
        <item name="android:layout_marginStart">@dimen/artist_image_margin_start</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/artistRoundedImageView</item>
    </style>

    <style name="firstArtistImage">
        <item name="android:layout_width">@dimen/artist_image_width</item>
        <item name="android:layout_height">@dimen/artist_image_height</item>
        <item name="android:layout_marginTop">@dimen/artist_image_margin_top</item>
        <item name="android:layout_marginStart">@dimen/first_artist_image_margin_start</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/artistRoundedImageView</item>
    </style>

    <style name="artistName">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/artist_name_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/artist_name_margin_top</item>
        <item name="android:layout_marginStart">@dimen/artist_name_margin_start</item>
    </style>

    <style name="bottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_navigation_view_height</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
</resources>